{
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-read --allow-write --allow-env app.ts",
    "start": "deno run --allow-net --allow-read --allow-write --allow-env app.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check app.ts",
    "test": "deno test --allow-net --allow-read --allow-write --allow-env",
    "install": "deno install --allow-net --allow-read --allow-write --allow-env -n agrostock-api app.ts",
    "db:setup": "mysql -u root -p < ../agrostock.sql",
    "db:reset": "mysql -u root -p -e 'DROP DATABASE IF EXISTS agrostock; CREATE DATABASE agrostock;' && deno task db:setup",
    "logs": "deno run --allow-read --allow-write scripts/view-logs.ts",
    "clean": "deno run --allow-read --allow-write scripts/cleanup.ts"
  },
  "imports": {
    "@std/path": "jsr:@std/path@1",
    "@std/encoding": "jsr:@std/encoding@1",
    "@std/dotenv": "jsr:@std/dotenv@1",
    "@std/testing": "jsr:@std/testing@1",
    "@std/assert": "jsr:@std/assert@1"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "test": {
    "include": ["**/*_test.ts", "**/*.test.ts"],
    "exclude": ["node_modules/**", "**/testdata/**"]
  }
}
